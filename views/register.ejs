<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="far fa-id-card" style="color:white"></i></i> Registrujte se
        </h1>
        <%- include ('./partials/messages') %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Ime</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Unesite vaše ime"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            >
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Unesite vašu Email adresu"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            >
          </div>
          <div class="form-group">
            <label for="password">Lozinka</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Kreirajte lozinku (6 ili više karaktera)"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            >
          </div>
          <div class="form-group">
            <label for="password2">Potvrdite lozinku</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Potvrdite lozinku"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            >
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Registracija
          </button>
        </form>
        <p class="lead mt-4">Imate nalog? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>